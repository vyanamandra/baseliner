# /lib/systemd/system/consul-esm.service
[Unit]
Description="HashiCorp Consul-ESM - External Services Monitoring utility"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/opt/consul/esm-config.hcl

[Service]
#Type=notify
EnvironmentFile=-/etc/consul.d/consul-esm.env
User=consul
Group=consul
ExecStart=/usr/bin/consul-esm -config-file=/opt/consul/esm-config.hcl
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target